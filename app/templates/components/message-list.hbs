<div style="display: flex; flex-direction: row; justify-content: center; align-items: center; align-content: center;">
    <h3 style="flex: auto; display: flex; flex-direction: row; center; align-items: center; align-content: center; color: #77777"><i class="material-icons" style="padding-right: 10px;">chat</i>{{title}}</h3>
    <div class="round-button" style="display: flex; flex-direction: row; justify-content: center; align-items: center; align-content: center;"><i class="material-icons" style="padding-right: 10px;">chat</i> Add Message</div>
</div>

<div>
    <div class="card" style="display: flex; margin-bottom: 10px;">
        <div style="padding: 0 10px 0 10px; cursor: pointer;" {{action "sort" "title"}}>Title</div>
        <div style="flex: auto;"></div>
        <div style="padding: 0 10px 0 10px; cursor: pointer;" {{action "sort" "date"}}>Date</div>
    </div>
</div>

<div>
    {{#each messages as |message|}}
    <div class="card" style="display: flex; flex-direction: row" {{action "showMessage" message}}>
        <div style="flex: auto; display: flex; flex-direction: column;">
            <div class="card-title">{{message.title}}</div>
            <div class="card-content">{{message.content}}</div>
            <div class="card-date">{{message.created_at}}</div>
        </div>
        <div style="display: flex; flex-direction: row;">
            <span>
                <i class="material-icons" style="margin: 0 5px 0 5px; cursor: pointer;">edit</i>
            </span>
            <span>
                <i class="material-icons" style="margin: 0 5px 0 5px; cursor: pointer;">close</i>
            </span>
        </div>
    </div>
    {{/each}}
</div>